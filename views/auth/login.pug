extends ../layouts/common

block content
  h2.my-3 Login
  if(errors)
    each error in errors   
        .alert.alert-danger= error

  form(action="/auth/login", method="POST")
    label(for="gmail") Gmail
    input#gmail(type="text", placeholder="Gmail", name="gmail", class="form-control mb-3 w-50", value=values ? values.gmail : "")
    label(for="pass") Password
    input#pass(type="password", placeholder="Password", name="pass", class="form-control mb-2 w-50", value=values ? values.pass : "")
    button(class="btn btn-primary", type='submit') Login